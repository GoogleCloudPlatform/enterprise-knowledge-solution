steps:

# Pull previous version
- name: 'gcr.io/cloud-builders/docker'
  entrypoint: 'bash'
  args: [ '-c', 'docker pull $_IMAGE_TAG || exit 0' ]

# Build RAG container (multipurpose)
- name: 'gcr.io/cloud-builders/docker'
  args: [ 'buildx', 'build',
                   '-f', 'components/processing/terraform/build/Dockerfile',
                   '--build-context', 'libs=components/processing/libs',
                   '--build-context', 'reqs=reqs',
                   '--cache-from=$_IMAGE_TAG',
                   '-t', '$_IMAGE_TAG',
                   'components/processing/terraform/build' ]

# Push container
- name: 'gcr.io/cloud-builders/docker'
  args: [ 'push', '$_IMAGE_TAG' ]

# Push Job container
- name: 'gcr.io/cloud-builders/gcloud'
  args: [ '--project', '${project_id}',
          'run',
          'jobs',
          '--region', '$_REGION',
          'deploy', '${processing_cloud_run_job_name}',
          '--image=$_IMAGE_TAG',
          '--task-timeout=60m',
          '--memory=3Gi',
          '--service-account', '$_SERVICE_ACCOUNT' ]

serviceAccount: 'projects/${project_id}/serviceAccounts/${build_service_account}'
substitutions:
  _IMAGE_TAG: '${registry_url}/docprocessor:latest'
  _REGION: '${region}'
  _SERVICE_ACCOUNT: '${service_account}'

options:
  dynamicSubstitutions: true
  logging: CLOUD_LOGGING_ONLY
